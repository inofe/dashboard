<!DOCTYPE html>
<html lang="tr" class="h-full bg-gray-50">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Teklif Detayı | Dashboard</title>
    <script src="https://cdn.tailwindcss.com"></script>
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css" rel="stylesheet">
</head>
<body class="h-full">
    <div class="min-h-full">
        <%- include('../../../views/partials/dashboard-header', { currentPage: 'proposals', user: user }) %>

        <!-- Main content -->
        <main class="max-w-6xl mx-auto py-6 sm:px-6 lg:px-8">
            <div class="px-4 py-6 sm:px-0">
                <!-- Back Button -->
                <div class="mb-6">
                    <a href="/dashboard/proposals" class="text-indigo-600 hover:text-indigo-500 text-sm font-medium">
                        <i class="fas fa-arrow-left mr-2"></i>Teklif Listesi
                    </a>
                </div>

                <div class="grid grid-cols-1 lg:grid-cols-3 gap-6">
                    <!-- Proposal Details -->
                    <div class="lg:col-span-2">
                        <div class="bg-white shadow rounded-lg">
                            <div class="px-6 py-4 border-b border-gray-200">
                                <div class="flex items-center justify-between">
                                    <h2 class="text-xl font-semibold text-gray-900">
                                        <%= proposal.title %>
                                    </h2>
                                    <div class="flex items-center space-x-2">
                                        <!-- Status Badge -->
                                        <span class="inline-flex items-center px-2.5 py-0.5 rounded-full text-xs font-medium <%= proposal.is_active ? 'bg-green-100 text-green-800' : 'bg-red-100 text-red-800' %>">
                                            <i class="fas <%= proposal.is_active ? 'fa-check-circle' : 'fa-times-circle' %> mr-1"></i>
                                            <%= proposal.is_active ? 'Aktif' : 'Pasif' %>
                                        </span>
                                        <!-- Toggle Button -->
                                        <form method="POST" action="/dashboard/toggle-proposal/<%= proposal.id %>" class="inline">
                                            <button 
                                                type="submit" 
                                                class="<%= proposal.is_active ? 'bg-red-100 hover:bg-red-200 text-red-700' : 'bg-green-100 hover:bg-green-200 text-green-700' %> px-3 py-1 rounded-md text-sm font-medium transition-colors"
                                            >
                                                <%= proposal.is_active ? 'Pasif Yap' : 'Aktif Yap' %>
                                            </button>
                                        </form>
                                    </div>
                                </div>
                            </div>
                            
                            <div class="px-6 py-6">
                                <!-- Proposal Info -->
                                <div class="grid grid-cols-1 md:grid-cols-2 gap-6 mb-6">
                                    <div>
                                        <h3 class="text-sm font-medium text-gray-500 mb-2">Fiyat</h3>
                                        <p class="text-lg font-semibold text-gray-900">
                                            <% if (proposal.price) { %>
                                                ₺<%= parseFloat(proposal.price).toLocaleString('tr-TR') %>
                                            <% } else { %>
                                                Belirtilmedi
                                            <% } %>
                                        </p>
                                    </div>
                                    <div>
                                        <h3 class="text-sm font-medium text-gray-500 mb-2">Süre</h3>
                                        <p class="text-lg font-semibold text-gray-900">
                                            <%= proposal.duration || 'Belirtilmedi' %>
                                        </p>
                                    </div>
                                </div>

                                <!-- Description -->
                                <div class="mb-6">
                                    <h3 class="text-sm font-medium text-gray-500 mb-2">Proje Açıklaması</h3>
                                    <div class="bg-gray-50 rounded-md p-4">
                                        <p class="text-gray-900 whitespace-pre-line">
                                            <%= proposal.description || 'Açıklama bulunmuyor' %>
                                        </p>
                                    </div>
                                </div>

                                <!-- Customer Info -->
                                <div>
                                    <h3 class="text-sm font-medium text-gray-500 mb-3">Müşteri Bilgileri</h3>
                                    <div class="bg-gray-50 rounded-md p-4">
                                        <div class="space-y-2">
                                            <div class="flex items-center">
                                                <i class="fas fa-user w-4 h-4 text-gray-400 mr-3"></i>
                                                <span class="text-gray-900"><%= proposal.customer_name %></span>
                                            </div>
                                            <div class="flex items-center">
                                                <i class="fas fa-envelope w-4 h-4 text-gray-400 mr-3"></i>
                                                <a href="mailto:<%= proposal.customer_email %>" class="text-indigo-600 hover:text-indigo-500">
                                                    <%= proposal.customer_email %>
                                                </a>
                                            </div>
                                            <% if (proposal.customer_phone) { %>
                                            <div class="flex items-center">
                                                <i class="fas fa-phone w-4 h-4 text-gray-400 mr-3"></i>
                                                <span class="text-gray-900"><%= proposal.customer_phone %></span>
                                            </div>
                                            <% } %>
                                            <div class="flex items-center">
                                                <i class="fas fa-calendar w-4 h-4 text-gray-400 mr-3"></i>
                                                <span class="text-gray-900">
                                                    <%= new Date(proposal.created_at).toLocaleDateString('tr-TR') %>
                                                </span>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>

                    <!-- Sidebar -->
                    <div>
                        <!-- Public Link -->
                        <div class="bg-white shadow rounded-lg mb-6">
                            <div class="px-4 py-5">
                                <h3 class="text-lg font-medium text-gray-900 mb-4">
                                    <i class="fas fa-link mr-2 text-indigo-600"></i>
                                    Public Link
                                </h3>
                                <div class="space-y-3">
                                    <div class="flex items-center space-x-2">
                                        <input 
                                            type="text" 
                                            readonly 
                                            value="<%= baseUrl %>/proposal/<%= proposal.id %>" 
                                            class="flex-1 px-3 py-2 border border-gray-300 rounded-md text-sm bg-gray-50"
                                            id="proposalLink"
                                        >
                                        <button 
                                            onclick="copyLink()" 
                                            class="bg-indigo-600 hover:bg-indigo-700 text-white px-3 py-2 rounded-md text-sm font-medium transition-colors"
                                            title="Linki kopyala"
                                        >
                                            <i class="fas fa-copy"></i>
                                        </button>
                                    </div>
                                    <a 
                                        href="/proposal/<%= proposal.id %>" 
                                        target="_blank" 
                                        class="block w-full bg-gray-100 hover:bg-gray-200 text-center text-gray-700 font-medium py-2 px-4 rounded-md text-sm transition-colors mb-2"
                                    >
                                        <i class="fas fa-external-link-alt mr-2"></i>
                                        Önizle
                                    </a>
                                    <button 
                                        type="button"
                                        id="pdfButtonAdmin"
                                        class="block w-full bg-red-600 hover:bg-red-700 text-center text-white font-medium py-2 px-4 rounded-md text-sm transition-colors"
                                    >
                                        <i class="fas fa-file-pdf mr-2"></i>
                                        PDF İndir
                                    </button>
                                </div>
                            </div>
                        </div>

                        <!-- Responses -->
                        <div class="bg-white shadow rounded-lg">
                            <div class="px-4 py-5">
                                <h3 class="text-lg font-medium text-gray-900 mb-4">
                                    <i class="fas fa-comments mr-2 text-indigo-600"></i>
                                    Müşteri Yanıtları (<%= responses.length %>)
                                </h3>
                                <div class="space-y-4">
                                    <% if (responses && responses.length > 0) { %>
                                        <% responses.forEach(function(response) { %>
                                        <div class="border border-gray-200 rounded-lg p-3">
                                            <div class="flex items-center justify-between mb-2">
                                                <span class="inline-flex items-center px-2 py-1 rounded-full text-xs font-medium
                                                    <%= response.response_type === 'accepted' ? 'bg-green-100 text-green-800' : 
                                                        response.response_type === 'rejected' ? 'bg-red-100 text-red-800' : 
                                                        'bg-yellow-100 text-yellow-800' %>">
                                                    <i class="fas 
                                                        <%= response.response_type === 'accepted' ? 'fa-check-circle' : 
                                                            response.response_type === 'rejected' ? 'fa-times-circle' : 
                                                            'fa-edit' %> mr-1"></i>
                                                    <%= response.response_type === 'accepted' ? 'Kabul' : 
                                                        response.response_type === 'rejected' ? 'Red' : 
                                                        'Revizyon' %>
                                                </span>
                                                <span class="text-xs text-gray-500">
                                                    <%= new Date(response.created_at).toLocaleDateString('tr-TR') %>
                                                </span>
                                            </div>
                                            <% if (response.message) { %>
                                            <p class="text-sm text-gray-700 mt-2">
                                                "<%= response.message %>"
                                            </p>
                                            <% } %>
                                        </div>
                                        <% }); %>
                                    <% } else { %>
                                    <p class="text-sm text-gray-500 text-center py-4">
                                        Henüz yanıt alınmadı
                                    </p>
                                    <% } %>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </main>
    </div>

    <script>
        // PDF Print function
        document.addEventListener('DOMContentLoaded', function() {
            const pdfButton = document.getElementById('pdfButtonAdmin');
            if (pdfButton) {
                pdfButton.addEventListener('click', function(e) {
                    e.preventDefault();
                    e.stopPropagation();
                    try {
                        window.print();
                    } catch (error) {
                        console.error('Print error:', error);
                        alert('Print işlemi başlatılamadı. Tarayıcınızın print özelliğini kullanın.');
                    }
                });
            }
        });

        function copyLink() {
            const linkInput = document.getElementById('proposalLink');
            linkInput.select();
            linkInput.setSelectionRange(0, 99999);
            navigator.clipboard.writeText(linkInput.value);
            
            // Feedback
            const button = event.target.closest('button');
            const originalContent = button.innerHTML;
            button.innerHTML = '<i class="fas fa-check"></i>';
            button.classList.add('bg-green-600');
            button.classList.remove('bg-indigo-600');
            
            setTimeout(() => {
                button.innerHTML = originalContent;
                button.classList.remove('bg-green-600');
                button.classList.add('bg-indigo-600');
            }, 2000);
        }

    </script>
    
    <!-- Print Styles -->
    <style>
        @media print {
            nav, .no-print, button { display: none !important; }
            body { margin: 0; padding: 20px; }
            .shadow-lg, .shadow { box-shadow: none !important; }
            .bg-gradient-to-r { background: none !important; }
        }
    </style>
</body>
</html>