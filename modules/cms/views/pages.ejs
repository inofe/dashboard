<!DOCTYPE html>
<html lang="tr" class="h-full bg-gray-50">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Sayfalar | CMS</title>
    <script src="https://cdn.tailwindcss.com"></script>
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css" rel="stylesheet">
</head>
<body class="h-full">
    <div class="min-h-full">
        <!-- Navigation (Kısaltılmış) -->
        <nav class="bg-white shadow-sm border-b">
            <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
                <div class="flex justify-between h-16">
                    <div class="flex items-center">
                        <a href="/dashboard/cms" class="text-xl font-semibold text-gray-900">
                            <i class="fas fa-arrow-left mr-2"></i>CMS
                        </a>
                    </div>
                    <div class="flex items-center">
                        <span class="text-sm text-gray-700">Hoş geldin, <strong><%= user.username %></strong></span>
                    </div>
                </div>
            </div>
        </nav>

        <!-- Main content -->
        <main class="max-w-7xl mx-auto py-6 sm:px-6 lg:px-8">
            <div class="px-4 py-6 sm:px-0">
                
                <!-- Header -->
                <div class="flex items-center justify-between mb-8">
                    <div>
                        <h2 class="text-2xl font-bold text-gray-900">
                            <i class="fas fa-file-text mr-3 text-indigo-600"></i>
                            Sayfalar
                        </h2>
                        <p class="text-gray-600">Statik sayfalarınızı yönetin</p>
                    </div>
                    <a href="/dashboard/cms/pages/create" class="bg-indigo-600 hover:bg-indigo-700 text-white px-4 py-2 rounded-md text-sm font-medium transition-colors">
                        <i class="fas fa-plus mr-2"></i>
                        Yeni Sayfa
                    </a>
                </div>

                <!-- Mesajlar -->
                <% if (message) { %>
                <div class="<%= success ? 'bg-green-50 border-green-200' : 'bg-red-50 border-red-200' %> border rounded-md p-4 mb-6">
                    <div class="flex">
                        <div class="flex-shrink-0">
                            <i class="fas <%= success ? 'fa-check-circle text-green-400' : 'fa-exclamation-circle text-red-400' %>"></i>
                        </div>
                        <div class="ml-3">
                            <p class="text-sm font-medium <%= success ? 'text-green-800' : 'text-red-800' %>"><%= message %></p>
                        </div>
                    </div>
                </div>
                <% } %>

                <!-- Sayfalar Listesi -->
                <div class="bg-white shadow overflow-hidden sm:rounded-md">
                    <% if (pages && pages.length > 0) { %>
                    <ul class="divide-y divide-gray-200">
                        <% pages.forEach(page => { %>
                        <li>
                            <div class="px-4 py-4 flex items-center justify-between">
                                <div class="flex items-center">
                                    <div class="flex-shrink-0 h-10 w-10">
                                        <div class="h-10 w-10 rounded-full bg-indigo-100 flex items-center justify-center">
                                            <i class="fas fa-file-text text-indigo-600"></i>
                                        </div>
                                    </div>
                                    <div class="ml-4">
                                        <div class="text-sm font-medium text-gray-900">
                                            <%= page.title %>
                                        </div>
                                        <div class="text-sm text-gray-500 flex items-center">
                                            <span class="mr-4">Slug: <%= page.slug %></span>
                                            <span class="inline-flex items-center px-2.5 py-0.5 rounded-full text-xs font-medium 
                                                <%= page.status === 'published' ? 'bg-green-100 text-green-800' : 
                                                    page.status === 'draft' ? 'bg-yellow-100 text-yellow-800' : 
                                                    'bg-gray-100 text-gray-800' %>">
                                                <i class="fas <%= page.status === 'published' ? 'fa-check-circle' : 
                                                                page.status === 'draft' ? 'fa-edit' : 'fa-eye-slash' %> mr-1"></i>
                                                <%= page.status === 'published' ? 'Yayında' : 
                                                    page.status === 'draft' ? 'Taslak' : 
                                                    page.status.charAt(0).toUpperCase() + page.status.slice(1) %>
                                            </span>
                                            <% if (page.updated_at) { %>
                                                <span class="ml-2 text-gray-400">• <%= new Date(page.updated_at).toLocaleDateString('tr-TR') %></span>
                                            <% } %>
                                        </div>
                                    </div>
                                </div>
                                <div class="flex items-center space-x-2">
                                    <!-- Gerçek Link Butonu -->
                                    <a href="/page/<%= page.slug %>" 
                                       target="_blank"
                                       class="bg-teal-600 hover:bg-teal-700 text-white px-3 py-1 rounded-md text-sm font-medium transition-colors"
                                       title="Sayfayı ziyaret et">
                                        <i class="fas fa-external-link-alt mr-1"></i>Görüntüle
                                    </a>
                                    
                                    <!-- Status Toggle Button -->
                                    <button 
                                        data-page-id="<%= page.id %>" 
                                        data-status="<%= page.status %>"
                                        class="toggle-status-btn <%= page.status === 'published' ? 'bg-orange-500 hover:bg-orange-600' : 'bg-green-500 hover:bg-green-600' %> text-white px-3 py-1 rounded-md text-sm font-medium transition-colors"
                                        title="<%= page.status === 'published' ? 'Taslağa Çevir' : 'Yayınla' %>"
                                    >
                                        <i class="fas <%= page.status === 'published' ? 'fa-eye-slash' : 'fa-check' %> mr-1"></i>
                                        <%= page.status === 'published' ? 'Gizle' : 'Yayınla' %>
                                    </button>
                                    
                                    <!-- Düzenle Butonu -->
                                    <a href="/dashboard/cms/pages/edit/<%= page.id %>" 
                                       class="bg-blue-600 hover:bg-blue-700 text-white px-3 py-1 rounded-md text-sm font-medium transition-colors">
                                        <i class="fas fa-edit mr-1"></i>Düzenle
                                    </a>
                                    
                                    <!-- Silme Butonu -->
                                    <button class="delete-page-btn bg-red-600 hover:bg-red-700 text-white px-3 py-1 rounded-md text-sm font-medium transition-colors" 
                                            data-page-id="<%= page.id %>">
                                        <i class="fas fa-trash mr-1"></i>Sil
                                    </button>
                                </div>
                            </div>
                        </li>
                        <% }); %>
                    </ul>
                    <% } else { %>
                    <!-- Boş Durum -->
                    <div class="text-center py-12">
                        <i class="fas fa-file-text text-gray-400 text-6xl mb-4"></i>
                        <h3 class="text-lg font-medium text-gray-900 mb-2">Henüz sayfa yok</h3>
                        <p class="text-gray-500 mb-6">İlk sayfanızı oluşturmaya başlayın</p>
                        <a href="/dashboard/cms/pages/create" class="bg-indigo-600 hover:bg-indigo-700 text-white px-4 py-2 rounded-md text-sm font-medium transition-colors">
                            <i class="fas fa-plus mr-2"></i>
                            İlk Sayfayı Oluştur
                        </a>
                    </div>
                    <% } %>
                </div>

            </div>
        </main>
    </div>

    <script>
        // Status toggle fonksiyonu
        async function togglePageStatus(pageId, currentStatus) {
            try {
                const response = await fetch(`/dashboard/cms/pages/toggle-status/${pageId}`, {
                    method: 'POST',
                    headers: {
                        'Content-Type': 'application/json',
                        'Accept': 'application/json'
                    }
                });

                const result = await response.json();

                if (result.success) {
                    // Sayfayı yenile
                    location.reload();
                } else {
                    alert('Hata: ' + result.message);
                }
            } catch (error) {
                console.error('Status toggle error:', error);
                alert('Bir hata oluştu. Lütfen tekrar deneyin.');
            }
        }

        // Delete fonksiyonu
        async function deletePage(pageId) {
            if (!confirm('Bu sayfayı silmek istediğinizden emin misiniz?')) {
                return;
            }

            try {
                const form = document.createElement('form');
                form.method = 'POST';
                form.action = `/dashboard/cms/pages/delete/${pageId}`;
                document.body.appendChild(form);
                form.submit();
            } catch (error) {
                console.error('Delete error:', error);
                alert('Bir hata oluştu. Lütfen tekrar deneyin.');
            }
        }

        // Event listeners ekle
        document.addEventListener('DOMContentLoaded', function() {
            // Toggle butonlarına event listener ekle
            document.querySelectorAll('.toggle-status-btn').forEach(button => {
                button.addEventListener('click', function() {
                    const pageId = this.getAttribute('data-page-id');
                    const currentStatus = this.getAttribute('data-status');
                    togglePageStatus(pageId, currentStatus);
                });
            });

            // Delete butonlarına event listener ekle
            document.querySelectorAll('.delete-page-btn').forEach(button => {
                button.addEventListener('click', function() {
                    const pageId = this.getAttribute('data-page-id');
                    deletePage(pageId);
                });
            });
        });
    </script>
</body>
</html>