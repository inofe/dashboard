<!DOCTYPE html>
<html lang="tr" class="h-full bg-gray-50">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Yeni Blog Yazısı | CMS</title>
    <script src="https://cdn.tailwindcss.com"></script>
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css" rel="stylesheet">
</head>
<body class="h-full">
    <div class="min-h-full">
        <!-- Navigation -->
        <nav class="bg-white shadow-sm border-b">
            <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
                <div class="flex justify-between h-16">
                    <div class="flex items-center">
                        <a href="/dashboard/cms/posts" class="text-xl font-semibold text-gray-900">
                            <i class="fas fa-arrow-left mr-2"></i>Blog Yazıları
                        </a>
                    </div>
                    <div class="flex items-center">
                        <span class="text-sm text-gray-700">Hoş geldin, <strong><%= user.username %></strong></span>
                    </div>
                </div>
            </div>
        </nav>

        <!-- Main content -->
        <main class="max-w-4xl mx-auto py-6 sm:px-6 lg:px-8">
            <div class="px-4 py-6 sm:px-0">
                
                <!-- Header -->
                <div class="mb-8">
                    <h2 class="text-2xl font-bold text-gray-900">
                        <i class="fas fa-plus mr-3 text-indigo-600"></i>
                        <%= post?.id ? 'Blog Yazısı Düzenle' : 'Yeni Blog Yazısı Oluştur' %>
                    </h2>
                    <p class="text-gray-600">Blog yazınızı oluşturun</p>
                </div>

                <!-- Mesajlar -->
                <% if (message) { %>
                <div class="<%= success ? 'bg-green-50 border-green-200' : 'bg-red-50 border-red-200' %> border rounded-md p-4 mb-6">
                    <div class="flex">
                        <div class="flex-shrink-0">
                            <i class="fas <%= success ? 'fa-check-circle text-green-400' : 'fa-exclamation-circle text-red-400' %>"></i>
                        </div>
                        <div class="ml-3">
                            <p class="text-sm font-medium <%= success ? 'text-green-800' : 'text-red-800' %>"><%= message %></p>
                        </div>
                    </div>
                </div>
                <% } %>

                <!-- Form -->
                <div class="bg-white shadow rounded-lg">
                    <form method="POST" action="<%= post?.id ? '/dashboard/cms/posts/edit/' + post.id : '/dashboard/cms/posts/create' %>" class="space-y-6 p-6">
                        
                        <!-- Başlık -->
                        <div>
                            <label for="title" class="block text-sm font-medium text-gray-700 mb-2">
                                <i class="fas fa-heading mr-2"></i>Blog Başlığı *
                            </label>
                            <input 
                                id="title" 
                                name="title" 
                                type="text" 
                                required
                                value="<%= post?.title || '' %>"
                                class="w-full px-3 py-2 border border-gray-300 rounded-md focus:outline-none focus:ring-indigo-500 focus:border-indigo-500"
                                placeholder="Örn: JavaScript'te Yeni Özellikler"
                            >
                        </div>

                        <!-- Slug -->
                        <div>
                            <label for="slug" class="block text-sm font-medium text-gray-700 mb-2">
                                <i class="fas fa-link mr-2"></i>URL Slug
                            </label>
                            <input 
                                id="slug" 
                                name="slug" 
                                type="text" 
                                value="<%= post?.slug || '' %>"
                                class="w-full px-3 py-2 border border-gray-300 rounded-md focus:outline-none focus:ring-indigo-500 focus:border-indigo-500"
                                placeholder="javascript-yeni-ozellikler"
                            >
                            <p class="mt-1 text-sm text-gray-500">Boş bırakılırsa başlıktan otomatik oluşturulur</p>
                        </div>

                        <!-- Özet -->
                        <div>
                            <label for="excerpt" class="block text-sm font-medium text-gray-700 mb-2">
                                <i class="fas fa-quote-left mr-2"></i>Özet
                            </label>
                            <textarea 
                                id="excerpt" 
                                name="excerpt" 
                                rows="3"
                                class="w-full px-3 py-2 border border-gray-300 rounded-md focus:outline-none focus:ring-indigo-500 focus:border-indigo-500"
                                placeholder="Blog yazısının kısa özeti..."
                            ><%= post?.excerpt || '' %></textarea>
                        </div>

                        <!-- İçerik -->
                        <div>
                            <label for="content" class="block text-sm font-medium text-gray-700 mb-2">
                                <i class="fas fa-align-left mr-2"></i>Blog İçeriği *
                            </label>
                            <textarea 
                                id="content" 
                                name="content" 
                                rows="12" 
                                required
                                class="w-full px-3 py-2 border border-gray-300 rounded-md focus:outline-none focus:ring-indigo-500 focus:border-indigo-500"
                                placeholder="Blog yazınızın içeriğini buraya yazın..."
                            ><%= post?.content || '' %></textarea>
                        </div>

                        <!-- Etiketler -->
                        <div>
                            <label for="tags" class="block text-sm font-medium text-gray-700 mb-2">
                                <i class="fas fa-tags mr-2"></i>Etiketler
                            </label>
                            <input 
                                id="tags" 
                                name="tags" 
                                type="text" 
                                value="<%= post?.tags || '' %>"
                                class="w-full px-3 py-2 border border-gray-300 rounded-md focus:outline-none focus:ring-indigo-500 focus:border-indigo-500"
                                placeholder="javascript,react,web-development"
                            >
                            <p class="mt-1 text-sm text-gray-500">Virgülle ayırarak yazın</p>
                        </div>

                        <!-- SEO Bilgileri -->
                        <div class="border-t pt-6">
                            <h3 class="text-lg font-medium text-gray-900 mb-4">
                                <i class="fas fa-search mr-2 text-indigo-600"></i>
                                SEO Ayarları
                            </h3>

                            <!-- Meta Title -->
                            <div class="mb-4">
                                <label for="meta_title" class="block text-sm font-medium text-gray-700 mb-2">
                                    Meta Başlık
                                </label>
                                <input 
                                    id="meta_title" 
                                    name="meta_title" 
                                    type="text" 
                                    value="<%= post?.meta_title || '' %>"
                                    class="w-full px-3 py-2 border border-gray-300 rounded-md focus:outline-none focus:ring-indigo-500 focus:border-indigo-500"
                                    placeholder="Arama motorları için başlık"
                                >
                            </div>

                            <!-- Meta Description -->
                            <div>
                                <label for="meta_description" class="block text-sm font-medium text-gray-700 mb-2">
                                    Meta Açıklama
                                </label>
                                <textarea 
                                    id="meta_description" 
                                    name="meta_description" 
                                    rows="3"
                                    class="w-full px-3 py-2 border border-gray-300 rounded-md focus:outline-none focus:ring-indigo-500 focus:border-indigo-500"
                                    placeholder="Arama motorları için açıklama (max 160 karakter)"
                                ><%= post?.meta_description || '' %></textarea>
                            </div>
                        </div>

                        <!-- Blog Durumu -->
                        <div class="border-t pt-6">
                            <label for="status" class="block text-sm font-medium text-gray-700 mb-2">
                                <i class="fas fa-eye mr-2"></i>Blog Durumu
                            </label>
                            <select 
                                id="status" 
                                name="status" 
                                class="w-full px-3 py-2 border border-gray-300 rounded-md focus:outline-none focus:ring-indigo-500 focus:border-indigo-500"
                            >
                                <option value="draft" <%= (post?.status === 'draft') ? 'selected' : '' %>>Taslak</option>
                                <option value="published" <%= (post?.status === 'published') ? 'selected' : '' %>>Yayınlandı</option>
                                <option value="private" <%= (post?.status === 'private') ? 'selected' : '' %>>Özel</option>
                            </select>
                        </div>

                        <!-- Butonlar -->
                        <div class="flex items-center justify-between pt-6 border-t">
                            <a href="/dashboard/cms/posts" class="text-gray-600 hover:text-gray-900 text-sm font-medium">
                                <i class="fas fa-arrow-left mr-2"></i>İptal
                            </a>
                            <button 
                                type="submit" 
                                class="bg-indigo-600 hover:bg-indigo-700 text-white font-medium py-2 px-6 rounded-md transition-colors focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-indigo-500"
                            >
                                <i class="fas fa-save mr-2"></i>
                                <%= post?.id ? 'Blog Yazısını Güncelle' : 'Blog Yazısını Kaydet' %>
                            </button>
                        </div>
                    </form>
                </div>

            </div>
        </main>
    </div>

    <script>
        // Slug üretim fonksiyonu
        function generateSlug(title) {
            return title.toLowerCase()
                .trim()
                // Türkçe karakterleri değiştir
                .replace(/ğ/g, 'g')
                .replace(/ü/g, 'u')
                .replace(/ş/g, 's')
                .replace(/ı/g, 'i')
                .replace(/ö/g, 'o')
                .replace(/ç/g, 'c')
                .replace(/Ğ/g, 'g')
                .replace(/Ü/g, 'u')
                .replace(/Ş/g, 's')
                .replace(/İ/g, 'i')
                .replace(/Ö/g, 'o')
                .replace(/Ç/g, 'c')
                // Özel karakterleri kaldır
                .replace(/[^a-z0-9\s-]/g, '')
                // Çoklu boşlukları tek tire ile değiştir
                .replace(/\s+/g, '-')
                // Çoklu tireleri tek tire yap
                .replace(/-+/g, '-')
                // Başta ve sonda tire varsa kaldır
                .replace(/^-+|-+$/g, '');
        }

        // Başlık değiştiğinde slug'ı otomatik oluştur
        document.getElementById('title').addEventListener('input', function(e) {
            const title = e.target.value;
            const slugField = document.getElementById('slug');
            
            // Eğer slug alanı boşsa veya manuel değiştirilmemişse
            if (!slugField.dataset.manual) {
                const slug = generateSlug(title);
                slugField.value = slug;
            }
        });

        // Slug manuel olarak değiştirildiğinde işaretle
        document.getElementById('slug').addEventListener('input', function(e) {
            if (e.target.value && e.target.value.trim() !== '') {
                e.target.dataset.manual = 'true';
            } else {
                e.target.dataset.manual = 'false';
            }
        });

        // İçerik değiştiğinde özet oluştur (eğer boşsa)
        document.getElementById('content').addEventListener('input', function(e) {
            const content = e.target.value;
            const excerptField = document.getElementById('excerpt');
            
            if (!excerptField.value || excerptField.value.trim() === '') {
                // HTML taglarını kaldır ve özet oluştur
                const plainText = content.replace(/<[^>]*>/g, '');
                if (plainText.length > 160) {
                    const truncated = plainText.substring(0, 160);
                    const lastSpace = truncated.lastIndexOf(' ');
                    excerptField.value = (lastSpace > 0 ? truncated.substring(0, lastSpace) : truncated) + '...';
                } else {
                    excerptField.value = plainText;
                }
            }
        });
    </script>
</body>
</html>