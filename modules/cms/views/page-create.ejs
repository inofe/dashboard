<!DOCTYPE html>
<html lang="tr" class="h-full bg-gray-50">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Yeni Sayfa | CMS</title>
    <script src="https://cdn.tailwindcss.com"></script>
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css" rel="stylesheet">
    <script src="/assets/tinymce/tinymce.min.js"></script>
</head>
<body class="h-full">
    <div class="min-h-full">
        <!-- Navigation -->
        <nav class="bg-white shadow-sm border-b">
            <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
                <div class="flex justify-between h-16">
                    <div class="flex items-center">
                        <a href="/dashboard/cms/pages" class="text-xl font-semibold text-gray-900">
                            <i class="fas fa-arrow-left mr-2"></i>Sayfalar
                        </a>
                    </div>
                    <div class="flex items-center">
                        <span class="text-sm text-gray-700">Hoş geldin, <strong><%= user.username %></strong></span>
                    </div>
                </div>
            </div>
        </nav>

        <!-- Main content -->
        <main class="max-w-4xl mx-auto py-6 sm:px-6 lg:px-8">
            <div class="px-4 py-6 sm:px-0">
                
                <!-- Header -->
                <div class="mb-8">
                    <h2 class="text-2xl font-bold text-gray-900">
                        <i class="fas fa-plus mr-3 text-indigo-600"></i>
                        <%= page?.id ? 'Sayfa Düzenle' : 'Yeni Sayfa Oluştur' %>
                    </h2>
                    <p class="text-gray-600">Statik bir sayfa oluşturun</p>
                </div>

                <!-- Mesajlar -->
                <% if (message) { %>
                <div class="<%= success ? 'bg-green-50 border-green-200' : 'bg-red-50 border-red-200' %> border rounded-md p-4 mb-6">
                    <div class="flex">
                        <div class="flex-shrink-0">
                            <i class="fas <%= success ? 'fa-check-circle text-green-400' : 'fa-exclamation-circle text-red-400' %>"></i>
                        </div>
                        <div class="ml-3">
                            <p class="text-sm font-medium <%= success ? 'text-green-800' : 'text-red-800' %>"><%= message %></p>
                        </div>
                    </div>
                </div>
                <% } %>

                <!-- Form -->
                <div class="bg-white shadow rounded-lg">
                    <form method="POST" action="<%= page?.id ? '/dashboard/cms/pages/edit/' + page.id : '/dashboard/cms/pages/create' %>" class="space-y-6 p-6">
                        
                        <!-- Başlık -->
                        <div>
                            <label for="title" class="block text-sm font-medium text-gray-700 mb-2">
                                <i class="fas fa-heading mr-2"></i>Sayfa Başlığı *
                            </label>
                            <input 
                                id="title" 
                                name="title" 
                                type="text" 
                                required
                                value="<%= page?.title || '' %>"
                                class="w-full px-3 py-2 border border-gray-300 rounded-md focus:outline-none focus:ring-indigo-500 focus:border-indigo-500"
                                placeholder="Örn: Hakkımızda"
                            >
                        </div>

                        <!-- Slug -->
                        <div>
                            <label for="slug" class="block text-sm font-medium text-gray-700 mb-2">
                                <i class="fas fa-link mr-2"></i>URL Slug
                            </label>
                            <input 
                                id="slug" 
                                name="slug" 
                                type="text" 
                                value="<%= page?.slug || '' %>"
                                class="w-full px-3 py-2 border border-gray-300 rounded-md focus:outline-none focus:ring-indigo-500 focus:border-indigo-500"
                                placeholder="hakkimizda"
                            >
                            <p class="mt-1 text-sm text-gray-500">Boş bırakılırsa başlıktan otomatik oluşturulur</p>
                        </div>

                        <!-- İçerik -->
                        <div>
                            <label for="content" class="block text-sm font-medium text-gray-700 mb-2">
                                <i class="fas fa-align-left mr-2"></i>Sayfa İçeriği *
                            </label>
                            <textarea 
                                id="content" 
                                name="content" 
                                rows="10" 
                                required
                                class="tinymce-editor"
                                placeholder="Sayfanızın içeriğini buraya yazın..."
                            ><%= page?.content || '' %></textarea>
                        </div>

                        <!-- SEO Bilgileri -->
                        <div class="border-t pt-6">
                            <h3 class="text-lg font-medium text-gray-900 mb-4">
                                <i class="fas fa-search mr-2 text-indigo-600"></i>
                                SEO Ayarları
                            </h3>

                            <!-- Meta Title -->
                            <div class="mb-4">
                                <label for="meta_title" class="block text-sm font-medium text-gray-700 mb-2">
                                    Meta Başlık
                                </label>
                                <input 
                                    id="meta_title" 
                                    name="meta_title" 
                                    type="text" 
                                    value="<%= page?.meta_title || '' %>"
                                    class="w-full px-3 py-2 border border-gray-300 rounded-md focus:outline-none focus:ring-indigo-500 focus:border-indigo-500"
                                    placeholder="Arama motorları için başlık"
                                >
                            </div>

                            <!-- Meta Description -->
                            <div>
                                <label for="meta_description" class="block text-sm font-medium text-gray-700 mb-2">
                                    Meta Açıklama
                                </label>
                                <textarea 
                                    id="meta_description" 
                                    name="meta_description" 
                                    rows="3"
                                    class="w-full px-3 py-2 border border-gray-300 rounded-md focus:outline-none focus:ring-indigo-500 focus:border-indigo-500"
                                    placeholder="Arama motorları için açıklama (max 160 karakter)"
                                ><%= page?.meta_description || '' %></textarea>
                            </div>
                        </div>

                        <!-- Sayfa Durumu -->
                        <div class="border-t pt-6">
                            <label for="status" class="block text-sm font-medium text-gray-700 mb-2">
                                <i class="fas fa-eye mr-2"></i>Sayfa Durumu
                            </label>
                            <select 
                                id="status" 
                                name="status" 
                                class="w-full px-3 py-2 border border-gray-300 rounded-md focus:outline-none focus:ring-indigo-500 focus:border-indigo-500"
                            >
                                <option value="draft" <%= (page?.status === 'draft') ? 'selected' : '' %>>Taslak</option>
                                <option value="published" <%= (page?.status === 'published') ? 'selected' : '' %>>Yayınlandı</option>
                                <option value="private" <%= (page?.status === 'private') ? 'selected' : '' %>>Özel</option>
                            </select>
                        </div>

                        <!-- Butonlar -->
                        <div class="flex items-center justify-between pt-6 border-t">
                            <a href="/dashboard/cms/pages" class="text-gray-600 hover:text-gray-900 text-sm font-medium">
                                <i class="fas fa-arrow-left mr-2"></i>İptal
                            </a>
                            <button 
                                type="submit" 
                                class="bg-indigo-600 hover:bg-indigo-700 text-white font-medium py-2 px-6 rounded-md transition-colors focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-indigo-500"
                            >
                                <i class="fas fa-save mr-2"></i>
                                <%= page?.id ? 'Sayfayı Güncelle' : 'Sayfayı Kaydet' %>
                            </button>
                        </div>
                    </form>
                </div>

            </div>
        </main>
    </div>

    <script>
        // Slug üretim fonksiyonu
        function generateSlug(title) {
            return title.toLowerCase()
                .trim()
                // Türkçe karakterleri değiştir
                .replace(/ğ/g, 'g')
                .replace(/ü/g, 'u')
                .replace(/ş/g, 's')
                .replace(/ı/g, 'i')
                .replace(/ö/g, 'o')
                .replace(/ç/g, 'c')
                .replace(/Ğ/g, 'g')
                .replace(/Ü/g, 'u')
                .replace(/Ş/g, 's')
                .replace(/İ/g, 'i')
                .replace(/Ö/g, 'o')
                .replace(/Ç/g, 'c')
                // Özel karakterleri kaldır
                .replace(/[^a-z0-9\s-]/g, '')
                // Çoklu boşlukları tek tire ile değiştir
                .replace(/\s+/g, '-')
                // Çoklu tireleri tek tire yap
                .replace(/-+/g, '-')
                // Başta ve sonda tire varsa kaldır
                .replace(/^-+|-+$/g, '');
        }

        // Başlık değiştiğinde slug'ı otomatik oluştur
        document.getElementById('title').addEventListener('input', function(e) {
            const title = e.target.value;
            const slugField = document.getElementById('slug');
            
            // Eğer slug alanı boşsa veya manuel değiştirilmemişse
            if (!slugField.dataset.manual) {
                const slug = generateSlug(title);
                slugField.value = slug;
            }
        });

        // Slug manuel olarak değiştirildiğinde işaretle
        document.getElementById('slug').addEventListener('input', function(e) {
            if (e.target.value && e.target.value.trim() !== '') {
                e.target.dataset.manual = 'true';
            } else {
                e.target.dataset.manual = 'false';
            }
        });

        // TinyMCE Editor Initialization
        tinymce.init({
            selector: '.tinymce-editor',
            height: 400,
            menubar: false,
            license_key: 'gpl',
            plugins: [
                'advlist', 'autolink', 'lists', 'link', 'image', 'charmap', 'preview',
                'anchor', 'searchreplace', 'visualblocks', 'code', 'fullscreen',
                'insertdatetime', 'media', 'table', 'help', 'wordcount'
            ],
            toolbar: 'undo redo | blocks | bold italic forecolor | alignleft aligncenter alignright alignjustify | bullist numlist outdent indent | removeformat | help',
            content_style: 'body { font-family:Helvetica,Arial,sans-serif; font-size:14px }',
            branding: false,
            promotion: false,
            readonly: false,
            setup: function (editor) {
                editor.on('change', function () {
                    editor.save();
                });
            },
            // Güvenlik ayarları
            valid_elements: 'p[style],div[style],br,strong[style],em[style],u[style],s[style],a[href|target|style],ul[style],ol[style],li[style],h1[style],h2[style],h3[style],h4[style],h5[style],h6[style],img[src|alt|width|height|style],blockquote[style],pre[style],code[style],table[style],thead[style],tbody[style],tr[style],td[style],th[style],span[style]',
            invalid_elements: 'script,object,embed,applet,iframe,form,input,textarea,button,select,option',
            forced_root_block: 'p',
            force_br_newlines: false,
            convert_urls: false,
            relative_urls: false,
            remove_script_host: true,
            document_base_url: window.location.origin
        });
    </script>
</body>
</html>