<!DOCTYPE html>
<html lang="tr">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Blog | <%= siteName %></title>
    <script src="https://cdn.tailwindcss.com"></script>
    <script>
        tailwind.config = {
            theme: {
                extend: {
                    colors: {
                        'blue': {
                            50: '#eff6ff',
                            100: '#dbeafe', 
                            200: '#bfdbfe',
                            300: '#93c5fd',
                            400: '#60a5fa',
                            500: '#3b82f6',
                            600: '#2563eb',
                            700: '#1d4ed8',
                            800: '#1e40af',
                            900: '#1e3a8a'
                        }
                    }
                }
            }
        }
    </script>
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css">
</head>
<body class="bg-gray-50">
    <!-- Header -->
    <%- include('partials/public-header', { 
        currentPage: 'blog', 
        siteName: siteName, 
        pages: pages 
    }) %>

    <!-- Page Header -->
    <section class="bg-gradient-to-r from-blue-600 to-blue-800 text-white py-16">
        <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
            <div class="text-center">
                <h1 class="text-4xl md:text-5xl font-bold mb-4">Blog</h1>
                <p class="text-xl text-blue-100 max-w-2xl mx-auto">
                    Teknoloji dünyasından güncel haberler, ipuçları ve öneriler
                </p>
            </div>
        </div>
    </section>

    <!-- Blog Posts -->
    <section class="py-16">
        <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
            <% if (posts && posts.length > 0) { %>
                <div class="grid lg:grid-cols-3 gap-8">
                    <!-- Main Content -->
                    <div class="lg:col-span-2">
                        <div class="space-y-8">
                            <% posts.forEach(post => { %>
                            <article class="bg-white rounded-xl shadow-md overflow-hidden hover:shadow-lg transition-shadow duration-300">
                                <% if (post.image) { %>
                                <div class="aspect-w-16 aspect-h-9">
                                    <img src="<%= post.image %>" alt="<%= post.title %>" class="w-full h-48 object-cover">
                                </div>
                                <% } %>
                                <div class="p-8">
                                    <div class="flex items-center text-sm text-gray-500 mb-4">
                                        <i class="fas fa-calendar-alt mr-2"></i>
                                        <%= new Date(post.created_at).toLocaleDateString('tr-TR', { 
                                            year: 'numeric', 
                                            month: 'long', 
                                            day: 'numeric' 
                                        }) %>
                                        <span class="mx-2">•</span>
                                        <i class="fas fa-clock mr-2"></i>
                                        <%= Math.ceil(post.content.split(' ').length / 200) %> dk okuma
                                    </div>
                                    <h2 class="text-2xl font-bold text-gray-900 mb-4 line-clamp-2">
                                        <a href="/blog/<%= post.slug %>" class="hover:text-blue-600 transition-colors duration-200">
                                            <%= post.title %>
                                        </a>
                                    </h2>
                                    <p class="text-gray-600 mb-6 line-clamp-3">
                                        <%= post.excerpt || post.content.replace(/<[^>]*>/g, '').substring(0, 200) + '...' %>
                                    </p>
                                    <div class="flex items-center justify-between">
                                        <a href="/blog/<%= post.slug %>" class="inline-flex items-center text-blue-600 hover:text-blue-700 font-semibold">
                                            Devamını Oku
                                            <i class="fas fa-arrow-right ml-2"></i>
                                        </a>
                                        <div class="flex items-center space-x-2">
                                            <button class="text-gray-400 hover:text-red-500 transition-colors duration-200">
                                                <i class="fas fa-heart"></i>
                                            </button>
                                            <button class="text-gray-400 hover:text-blue-500 transition-colors duration-200">
                                                <i class="fas fa-share"></i>
                                            </button>
                                        </div>
                                    </div>
                                </div>
                            </article>
                            <% }); %>
                        </div>

                        <!-- Pagination (if needed in future) -->
                        <div class="mt-12 flex justify-center">
                            <nav class="flex items-center space-x-2">
                                <button class="px-4 py-2 text-gray-500 bg-white rounded-lg border hover:bg-gray-50 transition-colors duration-200">
                                    <i class="fas fa-chevron-left"></i>
                                </button>
                                <button class="px-4 py-2 bg-blue-600 text-white rounded-lg">1</button>
                                <button class="px-4 py-2 text-gray-700 bg-white rounded-lg border hover:bg-gray-50 transition-colors duration-200">2</button>
                                <button class="px-4 py-2 text-gray-700 bg-white rounded-lg border hover:bg-gray-50 transition-colors duration-200">3</button>
                                <button class="px-4 py-2 text-gray-500 bg-white rounded-lg border hover:bg-gray-50 transition-colors duration-200">
                                    <i class="fas fa-chevron-right"></i>
                                </button>
                            </nav>
                        </div>
                    </div>

                    <!-- Sidebar -->
                    <div class="lg:col-span-1">
                        <div class="space-y-8">
                            <!-- Search -->
                            <div class="bg-white rounded-xl p-6 shadow-md">
                                <h3 class="text-lg font-bold text-gray-900 mb-4">Arama</h3>
                                <div class="relative">
                                    <input type="text" placeholder="Blog yazılarında ara..." class="w-full pl-10 pr-4 py-3 border border-gray-200 rounded-lg focus:ring-2 focus:ring-blue-500 focus:border-transparent">
                                    <i class="fas fa-search absolute left-3 top-1/2 transform -translate-y-1/2 text-gray-400"></i>
                                </div>
                            </div>

                            <!-- Recent Posts -->
                            <div class="bg-white rounded-xl p-6 shadow-md">
                                <h3 class="text-lg font-bold text-gray-900 mb-4">Son Yazılar</h3>
                                <div class="space-y-4">
                                    <% posts.slice(0, 3).forEach(post => { %>
                                    <a href="/blog/<%= post.slug %>" class="flex items-start space-x-3 group">
                                        <div class="w-16 h-16 bg-gray-200 rounded-lg flex-shrink-0 overflow-hidden">
                                            <% if (post.image) { %>
                                            <img src="<%= post.image %>" alt="<%= post.title %>" class="w-full h-full object-cover">
                                            <% } else { %>
                                            <div class="w-full h-full bg-blue-100 flex items-center justify-center">
                                                <i class="fas fa-file-alt text-blue-600"></i>
                                            </div>
                                            <% } %>
                                        </div>
                                        <div class="flex-1 min-w-0">
                                            <h4 class="text-sm font-medium text-gray-900 group-hover:text-blue-600 line-clamp-2">
                                                <%= post.title %>
                                            </h4>
                                            <p class="text-xs text-gray-500 mt-1">
                                                <%= new Date(post.created_at).toLocaleDateString('tr-TR') %>
                                            </p>
                                        </div>
                                    </a>
                                    <% }); %>
                                </div>
                            </div>

                            <!-- Categories -->
                            <div class="bg-white rounded-xl p-6 shadow-md">
                                <h3 class="text-lg font-bold text-gray-900 mb-4">Kategoriler</h3>
                                <div class="space-y-2">
                                    <a href="#" class="flex items-center justify-between text-gray-700 hover:text-blue-600 transition-colors duration-200">
                                        <span>Web Development</span>
                                        <span class="text-sm text-gray-400">5</span>
                                    </a>
                                    <a href="#" class="flex items-center justify-between text-gray-700 hover:text-blue-600 transition-colors duration-200">
                                        <span>JavaScript</span>
                                        <span class="text-sm text-gray-400">3</span>
                                    </a>
                                    <a href="#" class="flex items-center justify-between text-gray-700 hover:text-blue-600 transition-colors duration-200">
                                        <span>React</span>
                                        <span class="text-sm text-gray-400">2</span>
                                    </a>
                                    <a href="#" class="flex items-center justify-between text-gray-700 hover:text-blue-600 transition-colors duration-200">
                                        <span>Node.js</span>
                                        <span class="text-sm text-gray-400">4</span>
                                    </a>
                                </div>
                            </div>

                            <!-- Newsletter -->
                            <div class="bg-gradient-to-br from-blue-600 to-blue-700 rounded-xl p-6 text-white">
                                <h3 class="text-lg font-bold mb-4">Bülten</h3>
                                <p class="text-blue-100 mb-4 text-sm">Yeni yazılarımızdan haberdar olmak için e-posta adresinizi bırakın.</p>
                                <div class="space-y-3">
                                    <input type="email" placeholder="E-posta adresiniz" class="w-full px-4 py-2 rounded-lg bg-white/20 border border-white/30 placeholder-white/70 text-white focus:ring-2 focus:ring-white/50 focus:border-transparent">
                                    <button class="w-full bg-white text-blue-600 py-2 rounded-lg font-semibold hover:bg-gray-100 transition-colors duration-200">
                                        Abone Ol
                                    </button>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            <% } else { %>
                <!-- No Posts -->
                <div class="text-center py-16">
                    <div class="w-24 h-24 bg-gray-200 rounded-full flex items-center justify-center mx-auto mb-6">
                        <i class="fas fa-file-alt text-gray-400 text-3xl"></i>
                    </div>
                    <h2 class="text-2xl font-bold text-gray-900 mb-4">Henüz blog yazısı yok</h2>
                    <p class="text-gray-600 mb-8 max-w-md mx-auto">
                        İlk blog yazımızı yakında yayınlayacağız. Bu arada diğer sayfalarımızı inceleyebilirsiniz.
                    </p>
                    <a href="/" class="bg-blue-600 hover:bg-blue-700 text-white px-8 py-3 rounded-lg font-semibold transition-colors duration-200">
                        Ana Sayfaya Dön
                    </a>
                </div>
            <% } %>
        </div>
    </section>

    <!-- Footer -->
    <footer class="bg-gray-900 text-white py-16">
        <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
            <div class="grid md:grid-cols-2 lg:grid-cols-4 gap-8">
                <div class="lg:col-span-2">
                    <h3 class="text-2xl font-bold mb-4"><%= siteName %></h3>
                    <p class="text-gray-300 mb-6 max-w-md">
                        Modern web teknolojileri ile işinizi dijitale taşıyoruz.
                    </p>
                    <div class="flex space-x-4">
                        <a href="#" class="w-10 h-10 bg-blue-600 rounded-lg flex items-center justify-center hover:bg-blue-700 transition-colors duration-200">
                            <i class="fab fa-twitter text-white"></i>
                        </a>
                        <a href="#" class="w-10 h-10 bg-blue-600 rounded-lg flex items-center justify-center hover:bg-blue-700 transition-colors duration-200">
                            <i class="fab fa-linkedin text-white"></i>
                        </a>
                        <a href="#" class="w-10 h-10 bg-blue-600 rounded-lg flex items-center justify-center hover:bg-blue-700 transition-colors duration-200">
                            <i class="fab fa-github text-white"></i>
                        </a>
                    </div>
                </div>
                <div>
                    <h4 class="text-lg font-semibold mb-4">Hızlı Linkler</h4>
                    <div class="space-y-2">
                        <a href="/" class="text-gray-300 hover:text-white transition-colors duration-200 block">Ana Sayfa</a>
                        <a href="/blog" class="text-gray-300 hover:text-white transition-colors duration-200 block">Blog</a>
                        <% if (typeof pages !== 'undefined' && pages.length > 0) { %>
                            <% pages.slice(0, 3).forEach(page => { %>
                                <a href="/page/<%= page.slug %>" class="text-gray-300 hover:text-white transition-colors duration-200 block">
                                    <%= page.title %>
                                </a>
                            <% }); %>
                        <% } %>
                    </div>
                </div>
                <div>
                    <h4 class="text-lg font-semibold mb-4">İletişim</h4>
                    <div class="space-y-2 text-gray-300">
                        <p><i class="fas fa-envelope mr-2"></i>info@<%= siteName.toLowerCase() %>.com</p>
                        <p><i class="fas fa-phone mr-2"></i>+90 XXX XXX XX XX</p>
                        <p><i class="fas fa-clock mr-2"></i>Pazartesi - Cumartesi, 9:00 - 18:00</p>
                    </div>
                </div>
            </div>
            <div class="border-t border-gray-800 mt-12 pt-8 text-center text-gray-400">
                <p>&copy; <%= new Date().getFullYear() %> <%= siteName %>. Tüm hakları saklıdır.</p>
            </div>
        </div>
    </footer>

    <style>
        .line-clamp-2 {
            display: -webkit-box;
            -webkit-line-clamp: 2;
            -webkit-box-orient: vertical;
            overflow: hidden;
        }
        .line-clamp-3 {
            display: -webkit-box;
            -webkit-line-clamp: 3;
            -webkit-box-orient: vertical;
            overflow: hidden;
        }
    </style>
</body>
</html>