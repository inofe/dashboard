                                                <% } %>
                                                <% if (moduleName === 'cms' || moduleName === 'dashboard') { %>
                                                <span class="inline-flex items-center px-2.5 py-0.5 rounded-full text-xs font-medium bg-red-100 text-red-800">
                                                    <i class="fas fa-lock mr-1"></i>Sabit
                                                </span>
                                                <% } else if (isCore) { %>
                                                <span class="inline-flex items-center px-2.5 py-0.5 rounded-full text-xs font-medium bg-blue-100 text-blue-800">
                                                    Temel Mod√ºl
                                                </span>
                                                <% } else { %>
                                                <span class="inline-flex items-center px-2.5 py-0.5 rounded-full text-xs font-medium bg-purple-100 text-purple-800">
                                                    Opsiyonel
                                                </span>
                                                <% } %>
                                            </div>
                                        </div>
                                        <% }); %>
                                        <% } else { %>
                                        <div class="text-center py-8 text-gray-500">
                                            <i class="fas fa-exclamation-triangle text-3xl mb-4"></i>
                                            <p>Mod√ºl bilgileri y√ºklenemedi</p>
                                        </div>
                                        <% } %>
                                    </div>
                                </div>
                            </div>

                            <!-- TEMA TAB -->
                            <div id="content-theme" class="tab-content space-y-6 hidden">
                                <div class="bg-gray-50 rounded-lg p-6">
                                    <h4 class="text-lg font-medium text-gray-900 mb-4">
                                        <i class="fas fa-palette mr-2 text-indigo-600"></i>
                                        Tema Ayarlarƒ±
                                    </h4>
                                    <p class="text-sm text-gray-600 mb-6">Public sayfalarƒ±nƒ±zƒ±n (blog, anasayfa) g√∂r√ºn√ºm√ºn√º √∂zelle≈ütirin.</p>
                                    
                                    <div class="bg-white rounded-lg border border-gray-200 p-6">
                                        <h5 class="text-base font-medium text-gray-900 mb-4">üé® Tema Se√ßimi</h5>
                                        
                                        <div id="themesContainer" class="space-y-4">
                                            <!-- Temalar buraya dinamik olarak y√ºklenecek -->
                                        </div>
                                        
                                        <div class="mt-6">
                                            <button type="button" id="saveThemeBtn"
                                                    class="bg-indigo-600 hover:bg-indigo-700 text-white font-medium py-2 px-4 rounded-md transition-colors">
                                                <i class="fas fa-save mr-2"></i>Temayƒ± Kaydet
                                            </button>
                                        </div>
                                        
                                        <div id="theme-message" class="mt-4 hidden">
                                            <div class="bg-green-50 border border-green-200 rounded-md p-3">
                                                <div class="flex">
                                                    <i class="fas fa-check-circle text-green-400 mr-2 mt-0.5"></i>
                                                    <p class="text-sm text-green-800">Tema ba≈üarƒ±yla deƒüi≈ütirildi!</p>
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>

                            <!-- Submit Button -->
