                                                <div class="ml-3">
                                                    <label class="text-sm font-medium text-gray-900">
                                                        <i class="fas fa-puzzle-piece mr-2 text-indigo-500"></i>
                                                        <%= module.name %>
                                                    </label>
                                                    <p class="text-sm text-gray-500"><%= module.description || 'Mod√ºl a√ßƒ±klamasƒ± yok' %></p>
